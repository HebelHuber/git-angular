{
	"name": "vscode-notes",
	"displayName": "Synced Notes",
	"description": "Extension to edit, view and sync notes in vscode",
	"publisher": "HebelHuber",
	"qna": "marketplace",
	"homepage": "https://github.com/HebelHuber/git-angular/tree/Notes-Sync",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"license": "MIT",
	"repository": {
		"url": "https://github.com/HebelHuber/git-angular/tree/Notes-Sync.git",
		"type": "git"
	},
	"activationEvents": [
		"onView:syncednotes-explorer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "syncednotes-explorer",
					"name": "Synced Notes",
					"icon": "./resources/dep.svg"
				}
			]
		},
		"commands": [
			{
				"command": "syncedNotes.refreshNoteView",
				"title": "refreshNoteView",
				"category": "syncedNotes",
				"icon": "$(refresh)"
			},
			{
				"command": "syncedNotes.addNote",
				"title": "addNote",
				"category": "syncedNotes",
				"icon": "$(add)"
			},
			{
				"command": "syncedNotes.showNote",
				"title": "showNote",
				"category": "syncedNotes",
				"icon": "$(eye)"
			},
			{
				"command": "syncedNotes.editNote",
				"title": "editNote",
				"category": "syncedNotes",
				"icon": "$(pencil)"
			},
			{
				"command": "syncedNotes.deleteNote",
				"title": "deleteNote",
				"category": "syncedNotes",
				"icon": "$(trash)"
			},
			{
				"command": "syncedNotes.addFolder",
				"title": "addFolder",
				"category": "syncedNotes",
				"icon": "$(add)"
			},
			{
				"command": "syncedNotes.renameFolder",
				"title": "rename folder",
				"category": "syncedNotes",
				"icon": "$(arrow-swap)"
			},
			{
				"command": "syncedNotes.removeFolder",
				"title": "removeFolder",
				"category": "syncedNotes",
				"icon": "$(trash)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "syncedNotes.refreshNoteView",
					"when": "view == syncednotes-explorer",
					"group": "navigation"
				},
				{
					"command": "syncedNotes.addFolder",
					"when": "view == syncednotes-explorer",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "syncedNotes.showNote",
					"group": "inline",
					"when": "view == syncednotes-explorer && viewItem == note",
					"args": "viewItem"
				},
				{
					"command": "syncedNotes.editNote",
					"group": "inline",
					"when": "view == syncednotes-explorer && viewItem == note",
					"args": "viewItem"
				},
				{
					"command": "syncedNotes.deleteNote",
					"group": "inline",
					"when": "view == syncednotes-explorer && viewItem == note",
					"args": "viewItem"
				},
				{
					"command": "syncedNotes.renameFolder",
					"group": "inline",
					"when": "view == syncednotes-explorer && viewItem == folder",
					"args": "viewItem"
				},
				{
					"command": "syncedNotes.removeFolder",
					"group": "inline",
					"when": "view == syncednotes-explorer && viewItem == folder",
					"args": "viewItem"
				}
			]
		},
		"configuration": [
			{
				"title": "Synced Notes",
				"properties": {
					"syncedNotes.autorefresh": {
						"type": "boolean",
						"default": true,
						"description": "Automatically refresh the notes when the settings change"
					},
					"syncedNotes.debugMode": {
						"type": "boolean",
						"default": false
					},
					"syncedNotes.notes": {
						"type": "array"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js",
		"lint": "eslint --ext ts src/**/*",
		"release": "standard-version",
		"test:login": "./node_modules/.bin/vsce login HebelHuber"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"@typescript-eslint/eslint-plugin": "^2.16.0",
		"@typescript-eslint/parser": "^2.16.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"standard-version": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.2.2",
		"vsce": "^2.6.7",
		"yarn": "^1.22.17",
		"temp": "0.9.4"
	}
}
