{
	"name": "vscode-notes",
	"displayName": "Synced Notes",
	"description": "Extension to edit, view and sync notes in vscode",
	"publisher": "HebelHuber",
	"qna": "marketplace",
	"homepage": "https://github.com/HebelHuber/git-angular/tree/Notes-Sync",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"license": "MIT",
	"repository": {
		"url": "https://github.com/HebelHuber/git-angular/tree/Notes-Sync.git",
		"type": "git"
	},
	"activationEvents": [
		"onView:syncedNotes-container"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "syncednotes-container",
					"title": "Synced Notes",
					"icon": "./resources/syncednotes.svg"
				}
			]
		},
		"views": {
			"syncednotes-container": [
				{
					"id": "syncednotes-explorer",
					"name": "Synced Notes",
					"icon": "./resources/dep.svg"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "syncedNotes.refreshEntry",
					"when": "view == syncednotes-container",
					"group": "navigation"
				}
			],
			"view": [
				{
					"command": "syncedNotes.addFolder",
					"when": "view == syncednotes-explorer"
				}
			],
			"view/item/context": [
				{
					"command": "syncedNotes.deleteEntry",
					"when": "view == syncednotes-explorer"
				}
			]
		},
		"commands": [
			{
				"command": "syncedNotes.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "syncedNotes.deleteEntry",
				"title": "delete",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			}
		],
		"configuration": [
			{
				"title": "Synced Notes",
				"properties": {
					"syncedNotes.autorefresh": {
						"type": "boolean",
						"default": false
					}
				}
			},
			{
				"title": "syncedNotes.notes",
				"order": 2,
				"type": "object",
				"properties": {
					"syncedNotes.notes": {
						"default": {
							"folder_A": {
								"note 1": "IyB0aGlzIGlzIGEgdGVzdCBub3RlCgotIGxvbGxvMQotIGxvbGxvMg==",
								"note 2": "IyB0aGlzIGlzIGEgdGVzdCBub3RlCgotIGxvbGxvMQotIGxvbGxvMg=="
							},
							"folder_B": {
								"note 3": "IyB0aGlzIGlzIGEgdGVzdCBub3RlCgotIGxvbGxvMQotIGxvbGxvMg==",
								"note 4": "IyB0aGlzIGlzIGEgdGVzdCBub3RlCgotIGxvbGxvMQotIGxvbGxvMg=="
							}
						}
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js",
		"lint": "eslint --ext ts src/**/*",
		"release": "standard-version",
		"test:login": "./node_modules/.bin/vsce login HebelHuber"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"@typescript-eslint/eslint-plugin": "^2.16.0",
		"@typescript-eslint/parser": "^2.16.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"standard-version": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.2.2",
		"vsce": "^2.6.7",
		"yarn": "^1.22.17"
	}
}
